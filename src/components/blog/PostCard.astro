---
import { withBase } from '../../utils/i18n';

export interface Props {
  post: {
    slug: string;
    title: string;
    description?: string;
    pubDate?: Date;
    tags?: string[];
    categories?: string[];
    author?: string;
    readingTime?: number;
    image?: string;
  };
  featured?: boolean;
  layout?: 'vertical' | 'horizontal';
  localePrefix?: string;
  locale?: string;
  ui?: {
    readMore?: string;
    minuteRead?: string;
  };
}

const {
  post,
  featured = false,
  layout = 'vertical',
  localePrefix = '',
  locale = 'zh-CN',
  ui = { readMore: '阅读更多', minuteRead: '分钟' }
} = Astro.props;

const base = import.meta.env.BASE_URL;

const formattedDate = post.pubDate
  ? new Intl.DateTimeFormat(locale, {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    }).format(post.pubDate)
  : null;

const isHorizontal = layout === 'horizontal';

// 将标签名转换为 slug 格式
const tagToSlug = (tag: string) => tag.toLowerCase().replace(/\s+/g, '-');
// 将分类名转换为 slug 格式
const categoryToSlug = (category: string) => category.toLowerCase().replace(/\s+/g, '-');

// Build URLs with locale prefix and base URL
const postUrl = withBase(`${localePrefix}/posts/${post.slug}`, base);
const tagUrl = (tag: string) => withBase(`${localePrefix}/tags/${tagToSlug(tag)}`, base);
const categoryUrl = (category: string) => withBase(`${localePrefix}/categories/${categoryToSlug(category)}`, base);
---

<article class={`group card hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 ${isHorizontal ? 'flex gap-6 items-center' : 'block'}`}>
  <!-- 文章图片 -->
  {post.image && (
    <a href={postUrl} class={`block overflow-hidden rounded-lg ${
      isHorizontal ? 'w-48 h-32 flex-shrink-0' : 'w-full h-48 mb-4'
    }`}>
      <img
        src={post.image}
        alt={post.title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    </a>
  )}

  <!-- 文章内容 -->
  <div class={`${isHorizontal ? 'flex-1' : ''}`}>
    <!-- 分类 -->
    {post.categories && post.categories.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-2">
        {post.categories.slice(0, 2).map((category) => (
          <a
            href={categoryUrl(category)}
            class="text-xs px-2 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300 rounded-full hover:bg-amber-200 dark:hover:bg-amber-900/50 transition-colors"
            onclick="event.stopPropagation();"
          >
            {category}
          </a>
        ))}
      </div>
    )}

    <!-- 标签 -->
    {post.tags && post.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-3">
        {post.tags.slice(0, 3).map((tag) => (
          <a
            href={tagUrl(tag)}
            class="text-xs px-2 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full hover:bg-primary-200 dark:hover:bg-primary-900/50 transition-colors"
            onclick="event.stopPropagation();"
          >
            {tag}
          </a>
        ))}
        {post.tags.length > 3 && (
          <span class="text-xs px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-400 rounded-full">
            +{post.tags.length - 3}
          </span>
        )}
      </div>
    )}

    <!-- 标题 -->
    <a href={postUrl}>
      <h3 class={`font-bold text-slate-900 dark:text-slate-100 hover:text-primary-500 transition-colors line-clamp-2 mb-3 ${
        featured ? 'text-xl' : isHorizontal ? 'text-lg' : 'text-lg'
      }`}>
        {post.title}
      </h3>
    </a>

    <!-- 描述 -->
    <a href={postUrl}>
      <p class={`text-slate-600 dark:text-slate-400 line-clamp-3 mb-4 hover:text-slate-700 dark:hover:text-slate-300 transition-colors ${
        isHorizontal ? 'text-sm' : 'text-base'
      }`}>
        {post.description}
      </p>
    </a>

    <!-- 元信息 -->
    <div class="flex items-center justify-between text-sm text-slate-500 dark:text-slate-400">
      <div class="flex items-center space-x-4">
        {post.author && (
          <span class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{post.author}</span>
          </span>
        )}

        {post.pubDate && formattedDate && (
          <time class="flex items-center space-x-1" datetime={post.pubDate.toISOString()}>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            <span>{formattedDate}</span>
          </time>
        )}

        {post.readingTime && (
          <span class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{post.readingTime} {ui.minuteRead}</span>
          </span>
        )}
      </div>

      <a href={postUrl} class="flex items-center text-primary-500 hover:text-primary-600 transition-colors">
        <span class="text-sm font-medium">{ui.readMore}</span>
        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>