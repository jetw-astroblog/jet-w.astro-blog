// Helper to check if icon type is stroke-based (like email)
const isStrokeIcon = (type: string) => type === 'email';
---

<section class="py-16 mb-16 relative">
  <div class="text-center">
    <!-- 头像 -->
    {siteConfig.avatar && (
      <div class="mb-8">
        <img
          src={withBase(siteConfig.avatar, base)}
          alt={siteConfig.author}
          class="w-32 h-32 rounded-full mx-auto shadow-lg"
        />
      </div>
    )}

    <!-- 标题和描述 -->
    <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-slate-100 mb-6">
      {localeConfig.site.title || siteConfig.title}
    </h1>

    <p class="text-xl text-slate-600 dark:text-slate-400 mb-8 max-w-2xl mx-auto leading-relaxed">
      {localeConfig.site.description || siteConfig.description}
    </p>

    <!-- 社交链接 - 动态渲染 -->
    {socialLinks && socialLinks.length > 0 && (
      <div class="flex justify-center space-x-6 mb-12">
        {socialLinks.map((link) => {
          const iconPath = link.icon || (defaultIcons && defaultIcons[link.type]) || '';
          const isStroke = isStrokeIcon(link.type);
          const isExternal = !link.url.startsWith('mailto:');

          return (
            <a
              href={link.url}
              target={isExternal ? "_blank" : undefined}
              rel={isExternal ? "noopener noreferrer" : undefined}
              class="text-slate-600 dark:text-slate-400 hover:text-primary-500 transition-colors"
              aria-label={link.label || link.type}
            >
              {isStroke ? (
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
                </svg>
              ) : (
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d={iconPath} />
                </svg>
              )}
            </a>
          );
        })}
      </div>
    )}

    <!-- 行动按钮 -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href={`${localePrefix}/posts`}
        class="btn-primary inline-flex items-center justify-center space-x-2"
      >
        <span>{ui.browsePosts}</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>

      <a
        href={`${localePrefix}/about`}
        class="btn-secondary inline-flex items-center justify-center space-x-2"
      >
        <span>{ui.aboutMe}</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </a>
    </div>
  </div>

  <!-- 装饰性背景 -->
  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-full max-w-4xl h-96 -z-10 opacity-20">
    <div class="relative w-full h-full">
      <div class="absolute top-20 left-10 w-20 h-20 bg-primary-300 rounded-full mix-blend-multiply filter blur-xl animate-blob"></div>
      <div class="absolute top-40 right-10 w-20 h-20 bg-accent-300 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-20 left-1/2 w-20 h-20 bg-secondary-300 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"></div>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>